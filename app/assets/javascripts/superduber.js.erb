
var superduber = angular.module('superduber', ['ngRoute','ngResource']);



superduber.config(function ($routeProvider, $locationProvider) {
  $locationProvider.html5Mode(true);
  $routeProvider
    .when('/', {
      controller: 'HomeController',
      templateUrl: "<%= asset_path('home.html') %>"
    })
    .when('/e', {
      controller: 'HomeController',
      templateUrl: "<%= asset_path('events.html') %>"
    })
    .otherwise({
      redirectTo: '/'
    });
});


superduber.controller('HomeController', ['$scope', 'events', function($scope, events) {
    events.success(function(data){
        $scope.events = data.events;
    })

}]);



superduber.factory('events', ['$http', function($http) {
  return $http.get('/user_events')
         .success(function(data) {
           return data;
         })
         .error(function(data) {
           return data;
         });
}]);



