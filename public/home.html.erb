<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8' />
  <title></title>
  <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />

</head>
<body ng-controller="HomeController">
  <div class="masthead-container">
    <div id='map'>
    </div>
    <nav class="logo">
      <h1>SuperDuber</h1>
    </nav>
    <div class = "button-container">
      <a href="#" onclick="oauthRedir()" class="oauth-btn">Login With Uber</a>
    </div>
  </div>
  <div  ng-controller="HomeController" class="content-container">

    <form class="event-form hidden" novalidate ng-controller="HomeController" action="#" ng-submit="submitForm(form)">
      <label>Name</label>
      <input class= "name" type="text" ng-model="form.name"> </input>

      <label>Depart Address</label>
      <input class="dep-addr" type="text" ng-model="form.depart_address"> </input>

      <label>Arrive Address</label>
      <input class="arr-addr" type="text" ng-model="form.arrival_address"> </input>

      <label>Date</label>
      <input class="arr-date" type="datetime-local" ng-model="form.arrival_datetime"> </input>

      <input class="submit-btn" type="submit">

    </form>


    <h2>{{user.first_name}}'s Upcoming Events:</h2>
    <div class="event-container" ng-repeat="event in events">
      <div class="event">
        <p>Name: {{ event.name }}</p>
        <p>Date: {{ event.arrival_datetime | date:'MMMM d, yyyy @ h:mma' }}</p>
        <p>Depart From: {{ event.depart_address }}</p>
        <p>Arrive At: {{ event.arrival_address }}</p>
      </div>
    </div>
  </div>
</body>
</html>